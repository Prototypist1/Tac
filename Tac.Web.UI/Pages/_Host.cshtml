    <script> 
        
        var updateDots = 
        function(){
            const btn = document.getElementById("run");

            console.log("called")
            if (btn.disabled){
                var d = new Date();
                var n = d.getSeconds();
                var mod = n % 3;
                btn.value = 
                    mod == 0 ? " .." :
                    mod == 1 ? ". ." : 
                    ".. ";
            } 
            else 
